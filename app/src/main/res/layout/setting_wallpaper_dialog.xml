<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/setting_wallpaper_loading_bg"
    android:gravity="center">

    <ImageView
        android:id="@+id/setting_loading_result_iv"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:src="@drawable/load_fail_icon"
        android:visibility="gone"/>

    <ProgressBar
        android:id="@+id/setting_loading_pb"
        android:layout_width="200dp"
        android:layout_height="200dp"
        style="@style/loadingProgressBarSytle"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/setting_loading_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="@string/setting_loading_tv"
        android:textSize="30sp"
        android:textColor="@android:color/white"/>


</LinearLayout>