<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/info_rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ktc.wallpapermarket.ui.InfoActivity">

    <RelativeLayout
        android:id="@+id/info_top_bar_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical">

        <RelativeLayout
            android:id="@+id/info_top_home_rl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:focusable="true"
            android:clickable="true"
            android:gravity="center">
            <ImageView
                android:id="@+id/info_top_home_iv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:layout_centerInParent="true"
                android:background="@drawable/top_circle_white"/>
            <ImageView
                android:id="@+id/info_top_home_iv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:layout_centerInParent="true"
                android:background="@drawable/theme_market_a"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/info_top_market_rl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/info_top_home_rl"
            android:layout_toRightOf="@+id/info_top_home_rl"
            android:layout_marginLeft="10dp"
            android:focusable="true"
            android:clickable="true"
            android:gravity="center">

            <ImageView
                android:id="@+id/info_top_market_iv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:layout_centerVertical="true"
                android:background="@drawable/top_circle_white"/>
            <ImageView
                android:id="@+id/info_top_market_iv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:layout_marginLeft="12dp"
                android:layout_centerVertical="true"
                android:background="@drawable/mediacenter_white"/>
            <TextView
                android:id="@+id/info_top_market_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/info_top_market_iv2"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:text="@string/wallpaper_info"
                android:textSize="25sp"
                android:textColor="#fff"/>
        </RelativeLayout>

        <fragment
            android:id="@+id/info_top_wifi_fg"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            android:layout_alignTop="@+id/info_top_home_rl"
            android:name="com.ktc.wallpapermarket.ui.NetIconFragment"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/info_storage_rl"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/info_top_bar_rl">

        <TextView
            android:id="@+id/info_storage_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:textSize="22sp"
            android:textColor="@color/white"/>
        <ProgressBar
            android:id="@+id/info_storage_pb"
            android:layout_below="@+id/info_storage_tv"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_marginTop="10dp"
            android:max="100"
            android:progressDrawable="@drawable/info_progressbar"
            android:layout_width="match_parent"
            android:layout_height="10dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/info_content_rl"
        android:layout_below="@+id/info_storage_rl"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/info_content_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/test"
            android:layout_marginLeft="20dp"
            android:focusable="false"
            android:clickable="false"
            android:textSize="32sp"
            android:textColor="@color/white"/>

        <ImageView
            android:id="@+id/info_content_iv"
            android:layout_below="@+id/info_content_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:scaleType="fitXY"
            android:focusable="false"
            android:clickable="false"/>

        <LinearLayout
            android:id="@+id/info_content_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/info_content_iv"
            android:layout_below="@+id/info_content_name_tv"
            android:layout_marginLeft="20dp"
            android:focusable="false"
            android:clickable="false"
            android:orientation="vertical">

            <TextView
                android:id="@+id/info_content_size_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:clickable="false"
                android:text="@string/test"
                android:textSize="22sp"
                android:textColor="@color/white"/>
        </LinearLayout>

        <Button
            android:id="@+id/info_content_btn"
            android:layout_below="@+id/info_content_iv"
            android:background="@drawable/cancel_button_normal"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="80dp"
            android:focusable="true"
            android:clickable="true"
            android:text="@string/wallpaper_info_btn"
            android:textColor="@color/white"
            android:textSize="26sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/info_curtime_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="30dp"
        android:textColor="@color/white"
        android:textSize="18sp"/>


</RelativeLayout>