<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/info_rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ktc.wallpapermarket.ui.InfoActivity">

    <RelativeLayout
        android:id="@+id/info_top_bar_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical">

        <RelativeLayout
            android:id="@+id/info_top_home_rl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:focusable="true"
            android:clickable="true"
            android:gravity="center">
            <ImageView
                android:id="@+id/info_top_home_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:layout_centerInParent="true"
                android:background="@drawable/wallpaper_market_icon"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/info_top_market_rl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/info_top_home_rl"
            android:layout_toRightOf="@+id/info_top_home_rl"
            android:layout_marginLeft="10dp"
            android:focusable="true"
            android:clickable="true"
            android:gravity="center">

            <ImageView
                android:id="@+id/info_top_market_iv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:layout_centerVertical="true"
                android:background="@drawable/top_circle_white"/>
            <ImageView
                android:id="@+id/info_top_market_iv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:layout_marginLeft="12dp"
                android:layout_centerVertical="true"
                android:background="@drawable/mediacenter_white"/>
            <TextView
                android:id="@+id/info_top_market_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/info_top_market_iv2"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:text="@string/wallpaper_info"
                android:textSize="25sp"
                android:textColor="#fff"/>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/info_content_rl"
        android:layout_below="@+id/info_top_bar_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/info_content_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/test"
            android:focusable="false"
            android:clickable="false"
            android:textSize="32sp"
            android:textColor="@color/white"/>

        <ImageView
            android:id="@+id/info_content_iv"
            android:layout_below="@+id/info_content_name_tv"
            android:layout_width="600dp"
            android:layout_height="300dp"
            android:focusable="false"
            android:clickable="false"
            android:src="@drawable/ic_launcher"/>

        <LinearLayout
            android:id="@+id/info_content_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/info_content_iv"
            android:layout_below="@+id/info_content_name_tv"
            android:layout_marginLeft="20dp"
            android:focusable="false"
            android:clickable="false"
            android:orientation="vertical">

            <TextView
                android:id="@+id/info_content_size_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:clickable="false"
                android:text="@string/test"
                android:textSize="22sp"
                android:textColor="@color/white"/>
        </LinearLayout>

        <Button
            android:id="@+id/info_content_btn"
            android:layout_below="@+id/info_content_iv"
            android:background="@drawable/cancel_button_normal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="40dp"
            android:focusable="true"
            android:clickable="true"
            android:text="@string/wallpaper_info_btn"
            android:textColor="@color/white"
            android:textSize="26sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

</RelativeLayout>